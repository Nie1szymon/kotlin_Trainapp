<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/editTextTrainingName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Name"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTrainingDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Description"
        android:inputType="text" />

    <EditText
        android:id="@+id/editTextTrainingDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Training Date (YYYY-MM-DD)"
        android:inputType="date" />

    <Button
        android:id="@+id/buttonSaveTraining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Training" />
</LinearLayout>

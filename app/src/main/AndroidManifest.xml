<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.trainappmobilev2">
    <!-- Uprawnienia do korzystania z internetu i sprawdzania stanu sieci -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrainappMobileV2"
        tools:targetApi="31">
        <activity
            android:name=".ExercisesActivity"
            android:exported="true" />
        <activity
            android:name=".UserPlansActivity"
            android:exported="true" />
        <activity
            android:name=".PlansActivity"
            android:exported="true" />
        <activity android:name=".TrainingActivity" />
        <activity
            android:name=".RegisterActivity"
            android:exported="true" /> <!-- Definicja aktywności LoginActivity -->
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity> <!-- Definicja aktywności MainActivity -->
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>